<% include partials/header %>

<div class = "container text-center">
    <h1 style="margin: 25px auto">Edit Student</h1>
    <form action = "/students/<%= student._id %>?_method=PUT" method = "POST">
        <div class = "form-group">
            <input  type="number" class = "form-control" name = "student[sl_no]" value=<%= student.sl_no %> >
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" name="student[roll_no]" value= <%= student.roll_no %> >
        </div>
        <div class = "form-group">
            <input  type="text" class = "form-control" name="student[name]" value=" <%= student.name %> ">
        </div>
        <div class = "form-group">
            <input  type="text" class = "form-control" name="student[class]" value=" <%= student.class %> ">
        </div>
        <div class = "form-group">
            <input  type="date" class = "form-control" name="student[dob]" value = <%= student.dob %> >
        </div>
        <div class = "form-group">
            <input  type="text" class = "form-control" name="student[father_name]" value=" <%= student.father_name %> ">
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" name="student[mob_no]" value = <%= student.mob_no %> >
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" name="student[total_fees]" value= <%= student.total_fees %> >
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" name="student[fees_paid]" value= <%= student.fees_paid %> >
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" name="student[balance]" value= <%= student.balance %> >
        </div>
        <div class = "form-group">
            <input  type="submit" value="Update Student" class="btn btn-primary">
        </div>
    </form>

    <a href="/students/<%= student._id %>" class="btn btn-danger">Go Back</a>
</div>

<% include partials/footer %>