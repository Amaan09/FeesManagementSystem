<% include ../partials/header %>

<div class = "container text-center">
    <h1 style="margin: 25px auto">Add a New Student</h1>
    <form action = "/students" method = "POST">
        <div class = "form-group">
            <input  type="number" class = "form-control" placeholder="Serial_no" name = "student[sl_no]">
        </div>
        <div class = "form-group">
            <input  type="number" class = "form-control" placeholder="Roll_no" name="student[roll_no]">
        </div>
        <div class = "form-group">
            <input  type="text" class = "form-control" placeholder="Name" name="student[name]">
        </div>
        <div class = "form-group">
            <input  type="text" class = "form-control" placeholder="Class" name="student[class]">
        </div>
        <div class = "form-group">
            <input  type="date" class = "form-control" name="student[dob]">
        </div>
        <div class = "form-group">
                <input  type="text" class = "form-control" placeholder="Father Name" name="student[father_name]">
        </div>
        <div class = "form-group">
                <input  type="number" class = "form-control" placeholder="Moblie Number" name="student[mob_no]">
        </div>
        <div class = "form-group">
                <input  type="number" class = "form-control" placeholder="Total Fees" name="student[total_fees]">
        </div>
        <div class = "form-group">
                <input  type="number" class = "form-control" placeholder="Fees Paid" name="student[fees_paid]">
        </div>
        <div class = "form-group">
                <input  type="number" class = "form-control" placeholder="Balance" name="student[balance]">
        </div>
        <div class = "form-group">
            <input  type="submit" value="Add Student" class="btn btn-primary">
        </div>
    </form>
    <a href="/students" class="btn btn-danger">Go Back</a>
</div>

<% include ../partials/footer %>