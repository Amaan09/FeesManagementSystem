<% include partials/header %>

<div class = "container">
    <div class="jumbotron">
        <div class = "container">
                <h1 class="display-4">Class XXX</h1>
                <p class="lead">The student details for class XXX are given below</p>
                <a class="btn btn-primary btn-lg" href="students/new" role="button">Add new Student</a>
        </div>
    </div>
    <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Sl_no</th>
                <th scope="col">Roll Number</th>
                <th scope="col">Name</th>
                <th scope="col">Select</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(function(student){ %>
                <tr>
                  <td> <%= student.sl_no %> </td>               
                  <td> <%= student.roll_no %> </td>
                  <td> <%= student.name %> </td>
                  <td> <a href="/students/<%= student._id %>" class="btn btn-primary">More Info</a> </td>
                </tr>
              <%  }); %>
            </tbody>
    </table>
</div>
<% include partials/footer %>